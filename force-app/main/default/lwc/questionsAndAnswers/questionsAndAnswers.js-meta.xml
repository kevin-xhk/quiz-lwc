<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description>Questions And Answers</description>
    <isExposed>true</isExposed>
    <masterLabel>Questions And Answers</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="recordId" type="String" label="Record Id" description="Record Id"/>
            <property name="isSkippable" type="Boolean" label="Is skippable" description="Check if quiz is skippable"/>
            <property name="question_name" type="String" label="Question Name" description="Question Name"/>
            <property name="selectedAnswerForFlow" type="String" label="Selected Answer" description="Selected Answer" role="outputOnly"/>
            <property name="selectedAnswersForFlow" type="String[]" label="Selected Answers" description="Selected Answers" role="outputOnly"/>
            <property name="totalMilliseconds" type="Integer" label="Total Milliseconds" description="Total Milliseconds" role="outputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>